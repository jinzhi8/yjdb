				<link></link>
			</column>
			<column>
				<title>会议名称</title>
				<property>$title</property>
				<filedtype>string</filedtype>
				<width>570</width>
				<length>100</length>
				<align>left</align>
				<link>/workflowEntry.do?instanceid=+$instance_id</link>
			</column>

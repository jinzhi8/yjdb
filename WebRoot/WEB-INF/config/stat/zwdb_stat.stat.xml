<?xml version="1.0" encoding="utf-8"?>
<stat>
	<search>
		<items>
	
			<item>
				<name>督办事项</name>
				<pageid>title</pageid>
				<dbid>title</dbid>
				<type>string</type>
				<exp>like</exp>
			</item>
			<item>
				<name>发布时间</name>
				<pageid>issuetime</pageid>
				<dbid>issuetime</dbid>
				<type>date</type>
				<exp>between</exp>
			</item>
		</items>
	</search>
	<view>
		<type>instance</type>
		<moduleid>zwdb</moduleid>
		<unid>unid</unid>
		<sql>select decode(a.instance_status,'1','办理中','办结') status,a.instance_id,b.* FROM view_flow_instances_main a,getshouzwdb b
		</sql>
		<filters>
			<filter>module_id='zwdb'</filter>
			<filter>requestid=app_id</filter>
			<filter>instance_status in('1','2')</filter>
		</filters>
		<order>issuetime desc</order>
		<rows>30</rows>
		<columns>
			<column>
				<title>发布时间</title>
				<property>$issuetime</property>
				<filedtype>time</filedtype>
				<width>130</width>
				<length>100</length>
				<align>left</align>
				<link></link>
			</column>
			<column>
				<title>牵头单位</title>
				<property>$managedepname</property>
				<filedtype>string</filedtype>
				<width>170</width>
				<length>12</length>
				<align>left</align>
				<link></link>
			</column>
			<column>
				<title>督办事项</title>
				<property>$title</property>
				<filedtype>string</filedtype>
				<width>570</width>
				<length>100</length>
				<align>left</align>
				<link>/workflowEntry.do?instanceid=+$instance_id</link>
			</column>
			<column>
				<title>当前办理人</title>
				<property>#curPerformer+&lt;br&gt;+$status</property>
				<filedtype>string</filedtype>   
				<width>60</width>
				<length>30</length>
				<align>center</align>
				<link></link>
			</column>
		</columns>
	</view>
</stat>




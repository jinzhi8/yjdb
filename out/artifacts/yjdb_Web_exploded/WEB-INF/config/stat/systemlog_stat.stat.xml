<?xml version="1.0" encoding="utf-8"?>
<stat>
    <search>
        <items>
            <item>
                <name>登录人</name>
                <pageid>username</pageid>
                <dbid>username</dbid>
                <type>string</type>
                <exp>like</exp>
            </item>
			<item>
                <name>IP</name>
                <pageid>loginip</pageid>
                <dbid>loginip</dbid>
                <type>string</type>
                <exp>like</exp>
            </item>
            <item>
                <name>用户标记</name>
                <pageid>userflag</pageid>
                <dbid>userflag</dbid>
                <type>string</type>
                <exp>like</exp>
            </item>
			
            <item>
                <name>状态</name>
                <pageid>sccuess</pageid>
                <dbid>sccuess</dbid>
                <type>string</type>
                <exp>equal</exp>
            </item>
			
			<item>
                <name>登录终端</name>
                <pageid>depflag</pageid>
                <dbid>depflag</dbid>
                <type>string</type>
                <exp>equal</exp>
            </item>
            <item>
                <name>起始时间</name>
                <pageid>date</pageid>
                <dbid>logintime</dbid>
                <type>date</type>
                <exp>between</exp>
            </item>
        </items>
    </search>
    <view>
        <moduleid>systemlog</moduleid>
        <type>common</type>
        <sql>select to_char(logintime,'yyyy-mm-dd hh24:Mi:SS') datettime,username,loginip,decode(sccuess,'1','成功','0','失败',null,' ',sccuess) sccuess ,decode(depflag,'','电脑端','1','手机端','2','平板端',depflag) depflag from userlogin</sql>
        <filters>
            <!--<filter>depflag=#depFlag</filter>-->
            <filter>1=1</filter>
        </filters>
        <order>logintime desc</order>
        <rows>50</rows>
        <columns>
            <column>
                <title>登录时间</title>
                <property>$datettime</property>
                <filedtype>string</filedtype>
                <width>150</width>
                <length>30</length>
                <align>center</align>
                <link></link>
            </column>
            <column>
                <title>登录人</title>
                <property>$username</property>
                <filedtype>string</filedtype>
                <width></width>
                <length>30</length>
                <align>left</align>
                <link></link>
            </column>
            <column>
                <title>IP地址</title>
                <property>$loginip</property>
                <filedtype>string</filedtype>
                <width>150</width>
                <length>30</length>
                <align>center</align>
                <link></link>
            </column>
            <column>
                <title>状态</title>
                <property>$sccuess</property>
                <filedtype>string</filedtype>
                <width>150</width>
                <length>50</length>
                <align>center</align>
                <link></link>
            </column>
		<column>
            <title>登录终端</title>
            <property>$depflag</property>
            <filedtype>string</filedtype>
            <width>150</width>
            <length>30</length>
            <align>center</align>
            <link></link>
        </column>
        </columns>
    </view>
</stat>
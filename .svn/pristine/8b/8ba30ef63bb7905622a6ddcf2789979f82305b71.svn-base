@import "base.scss";
header{
  min-height: 40px;
  &.active{
    position: fixed;
    left: 0;
    right: 0;
    top:0;
    z-index: 999;
  }
}
.wrapper{
  min-height: 93vh;
  background-color: #f5f5f5;
}
ul.list-wrap{
  padding: 0 10px 10px;
  li{
    display: flex;
    flex-direction: column;
    background-color: #fff;
    padding: 10px;
    a{
      display: flex;
      flex-direction: column;
      margin: 0;
    }
    .list-title{
      margin: 0;
      display: flex;
      align-items: center;
      em{
        @include ellipsis;
        font-size: 1.6rem;
        margin: 0;
        max-width: 63vw;
      }
      span{
        flex: 1;
      }
      em,i{
        font-style: normal;
      }
      &>i.type{
        margin-left: 5px;
        color: #999;
      }
    }
    .date-wrap{
      flex: 1;
      margin: 10px 0;
      padding: 10px 0;
      border-radius: 3px;
      border-bottom: 1px solid #eee;
      display: flex;
      justify-content: space-between;
      p{
      }
    }
    .bottom-wrap{
      display: flex;
      justify-content: space-between;
      margin: 0;
      span{
        margin: 0;
        font-size: 1.4rem;
        display: flex;
        align-items: center;
        &.btn-wrap{
          display: flex;
          justify-content: flex-end;
          flex:1;
          em{
            font-style: normal;
            background-color: #3296fa;
            color: #fff;
            padding: 5px 18px;
            border-radius: 3px;
            font-size: 1.6rem;
            &.feedback{
              background-color: $otheGreen;
            }
            &.gray{
              background-color: #ddd;
            }
          }
        }
        i{
          @include iconfont;
          font-size: 2rem;
          color: $mainBlue;
          margin-right: 5px;
        }
        &.leder{
          i:before{
            content:'\e633';
          }
        }
      }
    }
    &:not(:last-child){
      margin-bottom: 10px;
    }
  }
}

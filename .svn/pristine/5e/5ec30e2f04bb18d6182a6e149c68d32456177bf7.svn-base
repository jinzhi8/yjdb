@charset "utf-8";
@import "base.scss";
body{
  background-color: #f5f5f5;
}
header{
  border-bottom: 10px solid #eee;
}
.form-list{
  padding: 0 15px;
  background-color: #fff;
  li{
    display: flex;
    align-items: center;
    justify-content: space-between;
    label{
      font-size: 1.6rem;
    }
    em{
      flex:1;
      font-size: 1.6rem;
      display: flex;
      justify-content: flex-end;
      align-items: center;
      color: #999;
      max-width: 70vw;
      span{
        @include ellipsis;
        max-width: 69vw;
        color: #333;
      }

      &.icon{
        @include iconfont;
        padding: 10px 0;
        &:after{
          content:"\e602";
          font-size: 1.4rem;
        }
      }
    }
    &:not(:last-child){
      border-bottom: 1px solid #eee;
    }
    input{
      border:none;
      flex:1;
      text-align: right;
      font-size: 1.6rem;
      padding: 10px 5px;
      padding-right: 15px;
    }
  }
}
.btn-wrap{
  display: flex;
  padding: 10px;
  a{
    flex:1;
    background-color: $mainBlue;
    border-radius: 3px;
    color: #fff;
    font-size: 1.6rem;
    text-align: center;
    padding: 10px 0;
  }
}
.shadow{
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background-color: $backgroundColor;
  z-index: 9999;
  overflow: auto;
  display: none;
  ul{
    padding: 0 10px;
    background-color: #fff;
    margin-bottom: 62px;
    li{
      display: flex;
      align-items: center;
      padding: 10px 0;
      em{
        flex: 1;
        font-size: 1.6rem;
      }
      i{
        width: 25px;
        height: 25px;
      }
      &:not(:last-child){
        border-bottom: 1px solid #eee;
      }
      &.active i{
        background-image: url(../img/mini-icon.png);
        background-repeat: no-repeat;
        background-size: 25px;
        background-position: left -150px;
      }
    }
  }
  .shadow-btn-wrap{
    display: flex;
    justify-content: flex-end;
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: #fff;
    border-top: 1px solid #eee;
    a{
      padding: 15px 25px;
      font-size: 1.6rem;
      color: $mainBlue;
      &.cancel{
        color: #999;
      }
    }
  }
  &.active{
    display: block;
  }
}

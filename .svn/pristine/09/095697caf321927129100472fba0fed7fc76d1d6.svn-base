@charset "utf-8";
* {
	margin: 0;
	padding: 0;
	list-style: none;
	font-family: 'microsoft yahei';
}
body,html {
	width: 100%;
	height: 100%;
}
body {
	background: url(../images/background.png) center center repeat;
	background-size: cover;
}
img {
	border: none;
}
a {
	text-decoration: none;
}
.slideGroupbox {
	display: table;
	height: 100%;
	width: 1303px;
	margin: 0 auto;
}
.slideGroup {
	display: table-cell;
	vertical-align: middle;
}
header {
	color: white;
	font-size: 27px;
	text-indent: 10px;
	padding-bottom: 18px;
}
.slideGroup .parHd {
	height: 33px;
	line-height: 30px;
	position: relative;
}
.slideGroup .parHd ul {
	position: absolute;
}
.slideGroup .parHd ul li {
	float: left;
	padding: 0 9px;
	margin: 0px 10px;
	cursor: pointer;
	color: white;
}
.slideGroup .parHd ul li i {
	width: 14px;
	height: 10px;
	display: inline-table;
}
.slideGroup .parHd ul li:nth-child(1) i {
	background: url(../images/nav_icon_1.png) left center no-repeat;
}
.slideGroup .parHd ul li:nth-child(2) i {
	background: url(../images/nav_icon_2.png) left center no-repeat;
}
.slideGroup .parHd ul li:nth-child(3) i {
	background: url(../images/nav_icon_3.png) left center no-repeat;
}
.slideGroup .parHd ul li:nth-child(4) i {
	background: url(../images/nav_icon_4.png) left center no-repeat;
}
.slideGroup .parHd ul li.on {
	border-bottom: 1px solid #fff;
}
.parHd_btn_login {
	width: 82px;
	height: 33px;
	font-size: 18px;
	text-align: left;
	text-indent: 38px;
	float: right;
	border: none;
	color: white;
	background: url(../images/parHd_btn_login.png) left center no-repeat;
	outline: none;
	cursor: pointer;
}
.slideGroup .parBd {
	zoom: 1;
}
.slideGroup .slideBox {
	overflow: hidden;
	zoom: 1;
}
.slideGroup .sPrev, .slideGroup .sNext {
	display: block;
	width: 30px;
	height: 30px;
	float: left;
	background: url(../images/icoLeft.png) center center no-repeat;
}
.slideGroup .sNext {
	background: url(../images/icoRight.png) center center no-repeat;
	margin-left: 6px;
}
.slideGroup .parBd .tempWrap {
	float: left;
}
.slideGroup .parBd ul {
	overflow: hidden;
	zoom: 1;
	float: left;
	margin-top: 18px !important;
	display: block;
	min-width: 100%;
}
.slideGroup .parBd ul li {
	margin: 0 8px;
	float: left;
	height: 380px;
	/*display: inline;*/
	overflow: hidden;
	text-align: center;
	position: relative;
	width: 246px;
}
.slideGroup .parBd ul li .pic {
}
.slideGroup .parBd ul li .pic img {
	width: 246px;
	height: 380px;
	display: block;
	transition: all 0.2s;
	-moz-transition: all  0.2s;
	-webkit-transition: all  0.2s;
	-o-transition: all  0.2s;
}
.slideGroup .parBd ul li:hover .pic img {
	width: 280px;
	height: 400px;
	margin: 0 auto;
	display: block;
}
.triangle_bottomright {
	width: 0;
	height: 0;
	border-bottom: 53px solid yellow;
	border-left: 53px solid transparent;
	position: absolute;
	bottom: 0px;
	right: 0px;
	z-index: 1;
	display: none;
}
.triangle_bottomright i {
	width: 20px;
	left: -29px;
	top: 27px;
	height: 17px;
	display: block;
	position: absolute;
	background: url(../images/triangle_bottomright_jt.png);
}
.slideGroup .parBd ul li:hover div.triangle_bottomright {
	display: block;
}
.slideGroup .parBd ul li .title {
	position: absolute;
	bottom: 0px;
	left: 0px;
	right: 0px;
	height: 83px;
	background-image: -webkit-linear-gradient(top,rgba(255,255,255,0) 0%,rgba(12, 21, 66, 1) 100%);
	background-image: -moz-linear-gradient(top,rgba(255,255,255,0) 0%,rgba(12, 21, 66,1) 100%);
	background-image: -o-linear-gradient(top,rgba(255,255,255,0) 0%,rgba(12, 21, 66,1) 100%);
	background-image: linear-gradient(top,rgba(255,255,255,0) 0%,rgba(12, 21, 66,1) 100%);
}
.slideGroup .parBd ul li .title a {
	display: block;
	color: white;
	font-size: 18px;
	line-height: 97px;
	text-align: left;
	text-indent: 25px;
}
.carousel_btn {
	float: right;
	padding-top: 15px;
	height: 45px;
}
#goodcover {
	display: none;
	position: absolute;
	top: 0%;
	left: 0%;
	width: 100%;
	height: 100%;
	background-color: black;
	z-index: 1001;
	-moz-opacity: 0.8;
	opacity: 0.50;
	filter: alpha(opacity=80);
}
.goodtxt ul {}
.goodtxt ul li {
	text-align: center;
	margin: 11px 27px;
}
.goodtxt ul li:first-child {
	margin: 37px 0px 20px 0px;
	font-size: 21px;
}
.goodtxt ul li input {
	width: 100%;
	height: 39px;
	font-size: 15px;
	text-indent: 12px;
	border: none;
	background-color: #e3f0fb;
	outline: none;
	cursor: pointer;
	border-radius: 4px;
}
.goodtxt ul li input[type="text"] {
}
.goodtxt ul li input[type="password"] {}
.goodtxt ul li input[type="submit"] {
	background-color: #0089ff;
	border: 1px solid #eee;
	color: white;
	font-size: 18px;
	height: 44px;
	line-height: 44px;
	text-indent: 0px;
	border: 1px solid #1e86e0;
}
#code {
	width: 392px;
	height: 276px;
	background-color: #fff;
	padding: 10px;
	position: absolute;
	display: none;
	z-index: 1002;
	border-radius: 5px;
	-moz-border-radius: 5px;
	-webkit-border-radius: 5px;
}
.close1 {
	width: 300px;
	height: 60px;
}
#closebt {
	float: right;
}
#closebt img {
	width: 20px;
}
<script>function draw(){var canvas = document.getElementById("can");var context = canvas.getContext("2d");//保存绘画状态context.save();//移动起点位置context.translate(70,140);//原点为起点绘制线段context.beginPath();context.moveTo(0,0);context.lineTo(70,-70);context.stroke();//恢复原有绘图状态context.restore();}window.addEventListener("load",draw,true);</script><body><canvas style="border:1px solid;" width="200" height="200"></canvas></body>
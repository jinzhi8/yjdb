body,html {
    width: 100%;
	min-height: 100%;
	background: url(datacenter-background1.jpg) left 30% no-repeat;
}
#pmCount-echart {
    width: 500px;
    height: 45%;
    position: absolute !important;
    top: 15px;
    left: 15px;
    background-color: rgba(255, 255, 255, 0.53);
    border-radius: 6px;
    padding: 21px;
}
.dataCenter-table {
	width: 40%;
	height: 30%;
    position: absolute !important;
    bottom: 15px;
    left: 15px;
    overflow: auto;
    /* background-color: rgba(255, 255, 255, 0.53); */
    border-radius: 6px;
    padding: 0px 5px 0px 21px;
}
.dataCenter-table-pmtj {
    position: absolute;
    left: 15px;
    top: 70px;
    width: 40%;
    /* background-color: rgba(255, 255, 255, 0.53); */
    padding: 0px 5px 0px 21px;
    overflow: auto;
    max-height: 35%;
    border-bottom-left-radius: 6px;
    border-bottom-right-radius: 6px;
    /* border: 1px solid #0089ff; */
}
.dataCenter-table-pmtjtitle {
    position: fixed;
    background-color: rgba(255, 255, 255, 0);
    padding: 0px 5px 0px 21px;
    border-top-left-radius: 6px;
    border-top-right-radius: 6px;
    left: 15px;
    width: 40%;
    top: 15px;
    height: 13px;
}
.dataCenter-table-pmtjtitle .title {
    float: left;
    font-size: 17px;
    font-weight: bold;
    color: #3387ef;
    border-left: 5px solid #ffd700;
    text-indent: 10px;
}
.dataCenter-table-pmtjtitle .layui-inline {
    float: right;
    margin-top: -10px;
}
.dataCenter-table-pmtjtitle .layui-inline input#test {
    border-radius: 30px;
    width: 74px;
    text-align: center;
    text-indent: 0px;
    padding-left: 0px;
}
.dataCenter-table .layui-table tbody tr:hover,.dataCenter-table  .layui-table thead tr, .layui-table-click,.dataCenter-table .layui-table-header, .layui-table-hover, .layui-table-mend, .layui-table-patch, .layui-table-tool, .layui-table-total, .layui-table-total tr,.dataCenter-table  .layui-table[lay-even] tr:nth-child(even) {
    background-color: rgba(255, 255, 255, 0.3);
}
.dataCenter-table .layui-table {
	background-color: transparent;
}
#bqCount-echart {
    width: 100%;
    height: 100%;
    position: absolute !important;
    z-index: -1;
    top: 0px;
    left: 0px;
}
.public-list div.dataCenter-table-list {
    background-color: rgba(255, 255, 255, 0.69);
    margin-bottom: 11px;
    padding: 8px 20px;
    border-radius: 3px;
}
.public-list .dataCenter-table-list:last-child {
    margin-bottom: 0px;
}
.public-list div.dataCenter-table-list {
    background-color: rgba(255, 255, 255, 0.3);
    margin-bottom: 11px;
    padding: 8px 20px;
    border-radius: 3px;
    transition: all 0.3s;
    -moz-transition: all 0.3s;
    -webkit-transition: all 0.3s;
    -o-transition: all 0.3s;
}
.public-list div.dataCenter-table-list:hover {
    text-indent: 10px;
}
.public-list div.dataCenter-table-list div {
	float: left;
    height: 100%;
    line-height: 44px;
    font-size: 21px;
    padding-right: 10px;
    min-width: 26px;
    text-align: center;
}
.public-list div.dataCenter-table-list p {
	font-size: 16px;
	color: gold;
	display: table;
}
.public-list div.dataCenter-table-list p span {
	margin-right: 18px;
	font-size: 14px;
    /* color: #44525f; */
    color: #d6dee4;
}
.public-list div.dataCenter-table-list p span em {
    font-weight: bold;
    font-size: 18px;
    color: #e40b0b;
}
#dataCenter-tablescrollbar::-webkit-scrollbar-track {
	/* -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3); */
	background-color: transparent;
	border-radius: 10px;
}
#dataCenter-tablescrollbar::-webkit-scrollbar {
	width: 10px;
	background-color: transparent;
}
#dataCenter-tablescrollbar::-webkit-scrollbar-thumb {
	border-radius: 10px;
	background-image: -webkit-gradient(linear,left bottom,left top,color-stop(0.44, rgba(255, 255, 255, 0.79)),color-stop(0.72, rgb(255, 255, 255, 0.79)),color-stop(0.86, rgb(255, 255, 255, 0.79)));
}
.dataCenter-list {
	width: 25%;
    position: absolute !important;
    top: 15px;
    bottom: 15px;
    right: 15px;
    overflow: auto;
    /* background-color: rgba(255, 255, 255, 0.53); */
    border-radius: 6px;
    padding: 21px;
}
.dataCenter-list ul li {
    /* margin-bottom: 11px; */
    padding: 5px 20px;
    border-radius: 3px;
    transition: all 0.3s;
    -moz-transition: all 0.3s;
    -webkit-transition: all 0.3s;
    -o-transition: all 0.3s;
}
.dataCenter-list ul li.success {
    background-color: rgba(0, 137, 255);
}
.dataCenter-list ul li.fail {
    background-color: rgba(255, 215, 0);
}
.dataCenter-list ul li.success div {
	color: white;
    font-size: 15px;
}
.dataCenter-list ul li div span {
    float: right;
    font-size: 13px;
    padding: 3px 9px;
    border-radius: 11px;
}
.dataCenter-list ul li.success div span {
    background-color: #1568ff;
}
.dataCenter-list ul li.fail div span {
    background-color: #ffb100;
}
.dataCenter-list ul li.success p {
	color: #85ff00;
}
.dataCenter-list ul li.fail div {
	color: red;
    font-size: 15px;
}
.dataCenter-list ul li.fail p {
	color: #ff4700;
}
.positionlayui-form {
    position: fixed;
    /* left: 45%; */
    /* margin-left: -121px; */
    margin-top: -51px;
    /* box-shadow: 2px 0px 13px #3e6cce; */
    border-radius: 40px;
}
.positionlayui-form input.layui-input.layui-unselect {
    border-radius: 43px;
    background-color: #ffd700;
    text-align: center;
    max-width: 156px;
    text-indent: 15px;
    border: none;
    height: 43px;
}
.dataCenter-table-list-span {
   /*  max-width: 100px; */
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    display: block;
    float: left;
}